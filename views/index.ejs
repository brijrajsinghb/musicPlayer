      //console.log(fileName);
      const audio = document.querySelector('#audio');
      const audiosource = document.querySelector('#audiosource'); //
      audiosource.src=fileName;
      console.log('loading');
      audio.load();
      audio.play();
    }

    function myOnCanPlayFunction() {
